  "version": "0.2.0",
  "configurations": [
    {
      "type": "brightscript",
      "request": "launch",
      "name": "Run",
      "stopOnEntry": false,
      "preLaunchTask": "build-dev",
      "envFile": "${workspaceFolder}/.vscode/.env",
      "host": "${env:ROKU_DEV_TARGET}",
      "password": "${env:ROKU_DEVPASSWORD}",
      "rootDir": "${workspaceFolder}/build",
      "files": [
        "manifest",
        "source/**/*.*",
        "components/**/*.*",
        "images/**/*.*",
        "fonts/**/*.*",
        "meta/**/*.*",
        "sounds/**/*.*",
        "!*.zip",
        "!**/*.zip"
      ],
      "autoRunSgDebugCommands": []
    },
    {
      "type": "brightscript",
      "request": "launch",
      "name": "Run Prod",
      "stopOnEntry": false,
      "preLaunchTask": "build-prod",
      "envFile": "${workspaceFolder}/.vscode/.env",
      "host": "${env:ROKU_DEV_TARGET}",
      "password": "${env:ROKU_DEVPASSWORD}",
      "rootDir": "${workspaceFolder}/build",
      "files": [
        "manifest",
        "source/**/*.*",
        "components/**/*.*",
        "images/**/*.*",
        "fonts/**/*.*",
        "meta/**/*.*",
        "sounds/**/*.*",
        "!*.zip",
        "!**/*.zip"
      ]
    },
    {
        "type": "brightscript",
        "request": "launch",
        "name": "Run (no build)",
        "stopOnEntry": false,
        "envFile": "${workspaceFolder}/.vscode/.env",
        "host": "${env:ROKU_DEV_TARGET}",
        "password": "${env:ROKU_DEVPASSWORD}",
        "rootDir": "${workspaceFolder}/build",
        "files": [
          "manifest",
          "source/**/*.*",
          "components/**/*.*",
          "images/**/*.*",
          "fonts/**/*.*",
          "meta/**/*.*",
          "sounds/**/*.*",
          "!*.zip",
          "!**/*.zip"
        ]
      },
      {
      "type": "brightscript",
      "request": "launch",
      "name": "Test",
      "stopOnEntry": false,
      "preLaunchTask": "build-test",
      "envFile": "${workspaceFolder}/.vscode/.env",
      "host": "${env:ROKU_DEV_TARGET}",
      "password": "${env:ROKU_DEVPASSWORD}",
      "rootDir": "${workspaceFolder}/build",
      "files": [
        "manifest",
        "source/**/*.*",
        "components/**/*.*",
        "images/**/*.*",
        "fonts/**/*.*",
        "meta/**/*.*",
        "sounds/**/*.*",
        "!*.zip",
        "!**/*.zip"
      ]
    }
 ]
}