{
  "rootDir": "src",
  "files": ["manifest", "source/**/*.*", "components/**/*.*", "!**/*.spec.*"],
  "autoImportComponentScript": true,
  "createPackage": false,
  "stagingFolderPath": "dist",
  "diagnosticFilters": [
    {
      "src": "**/roku_modules/**/*.*"
    },
    {
      "src": "**/WhiteList.xml",
      "codes": [1067]
    },
    1120
  ],
  "emitDefinitions": true,
  "plugins": ["maestro-roku-bsc-plugin"],
  "sourceMap": true,
  "maestro": {
    "excludeFilters": ["**/roku_modules/**/*", "**/rooibos/**/*"]
  }
}
