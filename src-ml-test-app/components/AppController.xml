<?xml version='1.0' encoding='UTF-8'?>
<component
    name='AppController'
    extends='mv_BaseScreen'>
  <interface>
    <field
        id='rowIndex'
        type='integer' />
    <field
        id='cellIndex'
        type='integer' />
  </interface>

  <children>
    <!-- Main Menu -->
    <LayoutGroup
        id='topNav'
        layoutDirection='horizontal'
        horizAlignment='right'
        translation='[1080,50]'>
		</LayoutGroup>
    <Group id='contentGroup' />
    <Rectangle
        color='#444444'
        opacity='0.5'
        width='1920'
        height='100'
        translation='[0, 1000]' />
    <Label
        id='infoLabel'
        translation='[50, 1000]'
        color='#ffffff' />
    <LoadingIndicator
        id='loadingIndicator'
        width='1920'
        height='1080'
        isActive='true'
        backgroundVisible='false'
        translation='[0,300]'
        text='' />

  </children>

</component>
