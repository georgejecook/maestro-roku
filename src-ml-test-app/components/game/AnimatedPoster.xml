<?xml version='1.0' encoding='utf-8'?>
<component
    name='AnimatedPoster'
    extends='Group'>
  <interface>
    <field
        id='spriteSheetUri'
        alias='poster.uri' />
    <field
        id='width'
        type='float'
        value='0' />
    <field
        id='height'
        type='float'
        value='0' />
    <field
        id='duration'
        alias='timer.duration'
        value='0.3' />
    <!-- array of [x,y] offsets for the spritesheet for each frame -->
    <field
        id='frameOffsets'
        type='array' />
    <!-- once|loop|ping-pong -->
    <field
        id='loopMode'
        type='string'
        value='loop' />

    <!-- start|stop -->
    <field
        id='control'
        type='string'
        value='stop' />
  </interface>

  <children>
    <Timer
        id='timer'
        repeat='true' />
    <Poster id='poster' />
  </children>
  <script uri='AnimatedPoster.brs' />
</component>